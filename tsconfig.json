{
  "include": [
    "NetscriptDefinitions.d.ts",
    "global.d.ts",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "crlf",
    "pretty": true,
    "removeComments": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@root/*": [
        "."
      ],
      "/*": [
        "*"
      ],
      "@ns": [
        "../NetscriptDefinitions.d.ts"
      ]
    }
  }
}